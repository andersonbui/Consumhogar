<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Color de fondo azul -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:startColor="#ff3019"
                android:centerColor="#cf0404"
                android:centerY="0.75"
                android:endColor="#a90329"
                android:angle="270" />
        </shape>
    </item>

    <!-- Color de la barra amarillo -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- radius of secundary progress -->
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#ffff99"
                    android:centerColor="#ffd65e"
                    android:centerY="0.75"
                    android:endColor="#febf04"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>