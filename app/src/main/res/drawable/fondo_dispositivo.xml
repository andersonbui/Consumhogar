<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:left="10dp"
                android:right="10dp">
                <shape android:shape="rectangle">
                    <solid android:color="#5f6a6a" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item
                android:top="0dp"
                android:left="10dp"
                android:right="10dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#f2f3f4" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
