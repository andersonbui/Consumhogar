<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_socket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andersonbuitron.mipruebathingspeakweb.AddSocketActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3F51B5"
        android:padding="20dp"
        android:id="@+id/ly1"
        >

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvtexto_nombre"
        android:text="Id:"
        android:textAppearance="?attr/textAppearanceLargePopupMenu"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_id"
        android:text="123123"
        android:textAppearance="?attr/textAppearanceLargePopupMenu"
        android:layout_toRightOf="@+id/tvtexto_nombre"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly1"
        android:text="Icono"
        android:layout_margin="20dp"
        android:id="@+id/tvTexto_Icono"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTexto_Icono"
        android:layout_alignBottom="@+id/tvTexto_Icono"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvTexto_Icono"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_icono"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icono"
        android:hint="Ingrese nombre"
        android:id="@+id/et_nombre"
        android:paddingTop="16dp"
        android:layout_alignLeft="@+id/tvTexto_Icono"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nombre"
        android:hint="Ingrese consumo en kwh"
        android:paddingTop="16dp"
        android:layout_alignLeft="@+id/tvTexto_Icono"
        />

</RelativeLayout>
