<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="@dimen/dimension_pequena"
    >

    <ImageView
        android:id="@+id/icono_disp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimension_height_spinner"
        android:src="@drawable/ic_stv_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dispositivo"
        android:id="@+id/tvNombre"
        android:layout_alignParentBottom="@+id/icono_disp"
        android:layout_toRightOf="@+id/icono_disp"
        android:layout_toEndOf="@+id/icono_disp"
        android:layout_marginLeft="5dp"/>

</LinearLayout>